a
    &:focus
        outline none

button
    &:focus
        outline none

.no-data
    display flex
    align-items center
    justify-content center
    .no-data-info
        text-align center
        .no-data-icon
            height 80px
            width @height
            line-height @height
            border-radius 50%
            margin auto
            background gray-light
            text-align center
            font-size 40px
            color #b8b8b8
            margin-bottom 5px
        .no-data-text
            font-size 14px
            color gray
            font-weight 600

.ScrollTop
    position fixed
    bottom 60px
    right 15px
    cursor pointer
    background theme
    color #ffffff
    width 43px
    height 43px
    border-radius 25px
    display none
    z-index 8
    overflow hidden
    transform translate3d(0,0,0)
    padding initial
    line-height initial
    text-align center


for i in range(1px, 10000px, 1)
  .mt-{i}
    margin-top i !important
  .mb-{i}
    margin-bottom i !important
  .ml-{i}
    margin-left i !important
  .mr-{i}
    margin-right i !important
  .padding-{i}
    padding i !important
  .pt-{i}
    padding-top i !important
  .pb-{i}
    padding-bottom i !important
  .height-{i}
    height i
  .width-{i}
    width i !important


.back-to-top
    z-index 99
    position fixed
    bottom 30px
    right 30px
    width 33px
    height 33px
    line-height 33px
    display none
    color #3c4858
    background-color #ced4da
    -webkit-transition all 0.5s ease
    transition all 0.5s ease
    -webkit-box-shadow 0 0 3px rgba(60, 72, 88, 0.15)
    box-shadow 0 0 3px rgba(60, 72, 88, 0.15)
    i
        font-size 16px
        -webkit-transition all 0.5s ease
        transition all 0.5s ease
    &:hover
        background-color #2f55d4
        color #ffffff
        -webkit-transform rotate(45deg)
        transform rotate(45deg)
        i
            -webkit-transform rotate(-45deg)
            transform rotate(-45deg)

.page-wrapper
    display flex
    width 100%
    height auto
    min-height 100%
    background main-bg
    .main-content
        width calc(100% - 345px)
        margin-left 345px
        padding-top 0px !important
        padding 36px 23px

.search-box
  position relative
  background white
  border-radius border-radius
  height 48px
  width 341px
  .search-input
    width 100%
    height 100%
    display block
    padding-left 48px
    border-radius 8px
    border-color transparent
    &:focus
      outline none
      box-shadow none
    &::placeholder
      color gray
  .icon
    position absolute
    font-size 20px
    font-weight 600
    color gray
    left 16px
    top 10px
    display block

.date-box
  p-calendar
    .ui-calendar
      .ui-inputtext
        height 48px
        width 146px
        padding-left 35px
        border none
        border-radius 8px !important
        font-size 16px
        &:hover
          border none
      .ui-datepicker-trigger
        &.ui-button
          position absolute
          left 12px
          background transparent
          border transparent
          color gray
          font-size 18px
          height auto
          width auto !important
          top 5px
          .ui-button-icon-left
              &.pi-calendar
                &:before
                  display none
                &:after
                  content "\f073"
                  font-family "Font Awesome 5 Pro"
                  display block
                  position absolute                   
                  top 2px
                  color gray
                  font-weight 600
                  font-size 16px
                  line-height normal
      .ui-widget-content
        left -80px !important
.pagination-block
  display flex
  align-items center
  justify-content flex-end
  margin-bottom 32px
  .page-list
    margin-right 10px
    color gray



.page-header
  display flex
  align-items center
  justify-content space-between
  padding-top 24px
  padding-bottom 32px
  .page-heading
    display flex
    align-items center
    .page-title
      font-size 14px
      color text-color
      font-weight 600
      &.inner-page
        color gray
        .icon
          margin-left 5px
          margin-right 5px
          color gray
        .text
          font-size 14px
          color text-color
  .page-options
    display flex
    align-items center
    .search-box
      margin-right 16px
    .date-box
      margin-right 32px

.status-drop
  background white
  min-height 48px
  border-radius 8px
  color text-olor
  .dropdown
    .dropdown-toggle
      padding 10px 15px
      height auto
      padding-right 35px
      padding-left 10px
      position relative
      &:after
        display none
      &:before
        content "\f078"
        font-family "Font Awesome 5 Pro"
        display block
        position absolute                   
        top 10px
        right 8px
        height 20px
        width @height
        line-height @height
        border-radius 50%
        text-align center
        font-size 12px
        background gray
        color white
      &:focus
        outline none
        box-shadow none

.button-box
  margin-right 16px
  &:last-child
    margin-right 0px
