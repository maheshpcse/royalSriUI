.table tbody tr th label, .table tbody tr td label, .table tbody tr th .label, .table tbody tr td .label
    display inline-block

.table
    width 100%
    max-width 100%
    margin-bottom 0
    color #423b3b
    & > tbody
        & > tr
            & > th
                font-weight 500
    & > thead
        & > tr
            & > th
                padding-bottom 16px
                font-size 16px
                font-weight 500
                color gray
                white-space nowrap
                text-align left
                border none
                margin-bottom 12px

.table>tbody>tr>td, .table>tbody>tr>th, .table>tfoot>tr>td, .table>tfoot>tr>th, .table>thead>tr>td, .table>thead>tr>th
    padding 6px 12px
    vertical-align middle

.table-responsive
    &::-webkit-scrollbar
        background #e9e9e9
    .table
        margin-bottom 0
        & > tbody
            tr
                & > td
                    vertical-align middle
                    border none
                    padding 20px 15px
                    background white
                    border-radius 8px
                    font-weight 600
                    font-size 16px
                    color text-color
        &.table-invoices
            & > tbody
                background white
                min-height 166px
                position relative
                border-radius 8px
                & > tr
                    & > td
                        border-radius 0px
                        .serial
                            height 36px
                            width @height
                            line-height @height
                            text-align center
                            border 1px solid
                            border-color gray
                            color gray
                            padding 2px 6px
                            border-radius 6px
                        .table-dropdown
                            .dropdown
                                border-bottom 1px solid
                                border-color gray
                                background transparent
                                .dropdown-toggle
                                    padding-left 0px
                                    border-radius 0px
                                    &:focus
                                        outline none
                                        box-shadow none
                                    .text
                                        color gray
                                    &:after
                                        display none
                                    &:before
                                        content "\f078"
                                        font-family "Font Awesome 5 Pro"
                                        display block
                                        position absolute
                                        top 5px
                                        right 0px
                                        height 20px
                                        width 20px
                                        line-height 20px
                                        border-radius 50%
                                        text-align center
                                        font-size 12px
                                        background transparent
                                        border 1px solid
                                        border-color gray
                                        color gray
                        .table-control
                            border-color transparent
                            border-bottom-color gray !important
                            border-radius 0px
                            border-bottom 1px solid
                            &:focus
                                outline none
                                box-shadow none
                            &::placeholder
                                color gray



.table-scrolled thead, .table-scrolled tbody tr
    display table
    width 100%
    table-layout fixed

.table-scrolled
    tbody
        display block
        max-height 500px
        overflow-x hidden
        overflow-y auto
        tr
            margin-bottom 12px
            &:hover
                box-shadow #ebe6e6 0px 2px 6px
        &::-webkit-scrollbar
            width 0px
            background transparent
        &::-webkit-scrollbar-thumb 
            background transparent