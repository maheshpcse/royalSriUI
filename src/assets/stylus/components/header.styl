.header-set
    padding-bottom 35px
    display flex
    align-items center
    justify-content space-between
    border-bottom 1px solid
    border-color gray
    position sticky
    top 0px
    background #f8f9fc
    z-index 1
    padding-top 36px
    .header-set-left
        .org-dropdown
            height 60px
            width 416px
            background white
            border-radius 4px
            .dropdown-toggle, .btn
                position relative
                &:after
                    content "\f078"
                    position absolute
                    right 15px
                    font-size 14px
                    font-family "Font Awesome 5 Pro"
                    width 20px
                    height 20px
                    line-height 20px
                    border-radius 50%
                    border 1px solid #c8d0e5
                    color gray
                &.btn-org
                    width 100%
                    height 60px
                    padding 15px
                    display flex
                    align-items center
                    .icon
                        color gray
                        font-size 20px
                        margin-right 20px
                    .text
                        font-weight 600
                        font-size 14px
                &:focus
                    outline none
                    box-shadow none
            .dropdown-menu
                width 100%
                top 0px
                transform translateY(65px) !important
                border-radius 4px
                border none
                padding 0px
                box-shadow rgba(33, 35, 38, 0.1) 0px 10px 10px -10px
                .dropdown-item
                    padding 12px 15px
                    color text-color
                    font-weight 600
                    font-size 14px
                    &:hover
                        background #eaeaea52
    .header-set-right
        .user-set
            display flex
            align-items center
            flex-direction row-reverse
            .user-img
                width 48px
                height @width
                border-radius 50%
                margin-left 12px
                overflow hidden
                img
                    height 100%
                    width 100%
                    object-fit cover
            .user-info
                width calc(100% - 60px)
                font-size 14px
                font-weight 600
                color text-color
                text-transform capitalize