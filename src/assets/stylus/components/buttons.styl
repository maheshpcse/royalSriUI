.btn
    padding .375rem 1.25rem
    border-radius 2rem
    transition none
    cursor pointer
    &.btn-lg
        font-size 1rem
        padding 0.65rem 1.75rem
        border-radius 2rem
        font-weight bold
        min-height 42px
    &.btn-outline
        &.btn-lg
            border-width 2px
            padding 0.6rem 1.75rem
    &.btn-primary
        color white
        background secondary
        border-color secondary
        &:hover
            background secondary-light
            border-color secondary-light
        &.btn-login
            font-size 16px
            font-weight 600
            padding 17px 84px
    &.btn-purple
        background #6667B9
        border-color #6667B9
        color white
        &:hover
            background #53549f
            border-color #53549f
        &.btn-outline
            background transparent
            color #6667B9
            &:hover
                color white
                background #6667B9
                border-color #6667B9
    &.btn-secondary
        &.btn-outline
            background transparent
            color #6c757d
            &:hover
                color white
                background #6c757d
                border-color #6c757d
    &.btn-white
        background white
        border-color white
        color text-color
        &:hover
            background rgba(255,255,255,0.8)
        &.btn-outline
            background transparent
            color white           
            &:hover
                color text-color
                background white
                border-color white
    &.btn-send
        padding 8px 20px
        background theme
        color white
        border-radius 20px
        text-transform uppercase
        font-weight bold
        transition 0.3s all ease
        &:hover
            background theme-dark
    &:focus
        outline none
    +mobile()
        padding 0.5rem 1.2rem !important
        min-height 20px !important
        font-size 0.9rem !important
    &.btn-create
        padding 8px 20px
        background secondary
        color white
        border-radius 20px
        transition 0.3s all ease
        font-size 14px
        min-height 48px
        display flex
        align-items center
        i
            margin-right 15px
            color white
        &:hover
            background secondary-light
        &.for-table
            margin auto
            background transparent
            color #2c6c87
            border 1px dashed #2c6c87
            i
                color #2c6c87
            &:hover
                background transparent
                color secondary-light
    &.btn-submit
        min-width 224px
        padding 15px 25px
        background secondary
        color white
        border-radius 20px
        transition 0.3s all ease
        min-height 48px
        display flex
        align-items center
        font-weight 600
        justify-content center
        font-size 16px
        border-radius 30px
        i
            margin-right 15px
            color white
        &:hover
            background secondary-light
    &.btn-icon-only
        height 24px
        width @height
        line-height 0px
        text-align center
        padding 5px
        color gray
        margin-right 24px
        &:last-child
            margin-right 0px
        &:hover
            color #8a90a0
        &:focus
            outline none
            box-shadow none
    &.btn-export
        min-height 40px
        border-radius 20px
        color gray
        background white
        display flex
        align-items center
        i
            margin-right 10px