.login-wrapper
    display flex
    width 100%
    height 100%
    overflow hidden
    .login-left
        width 50%
        .login-container
            max-width 365px
            margin auto
            display flex
            height 100%
            flex-direction column
            justify-content center
            align-items center
            .logo-image
                height 70px
                width 250px
                margin-bottom 40px
                img
                    height 100%
                    width 100%
                    object-fit cover
            .logo-info
                text-align center
                .logo-title
                    font-size 36px
                    font-weight bold
                    margin-bottom 32px
                .logo-input-data
                    width 365px
                    display block
                    margin-bottom 48px
    .login-right
        width 50%
        height 100%
        img
            height 100%
            width 100%
            object-fit cover